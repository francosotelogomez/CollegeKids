<script>
    document.getElementById('openModal').onclick = function () {
        document.getElementById('login_info_guardada').style.display = 'block';
    }

    document.querySelector('.close').onclick = function () {
        document.getElementById('login_info_guardada').style.display = 'none';
    }

    window.onclick = function (event) {
        if (event.target == document.getElementById('login_info_guardada')) {
            document.getElementById('login_info_guardada').style.display = 'none';
        }
    }
</script>