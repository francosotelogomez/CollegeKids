<div class="modal fade" id="login_info_guardada" tabindex="-1" aria-labelledby="geo_reniec" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg br-16 overflow-hidden">
        <div class="modal-content" style="background-color:#f4f4f4">
            <div class="container">
                <div class="row justify-content-md-center pt-48 pb-48 bg-grad-amarillo" id="header-logo">
                    <div class="col col-lg-4">
                        <img src="../assets/img/datos_guardados/l.png" id="logo" alt="" srcset="">
                    </div>
                </div>
                <a href="#" class="font-28 btn-close quitar-fondo" data-dismiss="modal"></a>
            </div>
            <div class="card-body pt-24 pb-88 p-sm-12" style="border-radius:24px;" id="login_bg">
                <p class="font-32 text-center font-weight-600" style="font-family: 'Ruda', sans-serif; color: #ee6538; font-size: 50px;">Usa tu información guardada</p>
                <div class="container mt-24">
                    <div class="row justify-content-md-center ">
                        <div class="col col-lg-8">
                            <form id="loginForm">
                                <div class="form-group">
                                    <label class="azul font-weight-600" for="txtCorreo">Usuario</label>
                                    <input type="text" class="form-control mb-12" id="txtCorreo" name="correo" placeholder="Escribe tu usuario">
                                </div>
                                <div class="form-group">
                                    <label class="azul font-weight-600" for="txtContrasenia">Contraseña</label>
                                    <input type="password" class="form-control" id="txtContrasenia" name="contrasena" placeholder="Ingresa una contraseña">
                                </div>
                                <button type="button" class="btn br-20 azul font-weight-600 btn-primary" id="btnIngresar">Ingresar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnIngresar").on("click", function () {
            var correo = $("#txtCorreo").val();
            var contrasena = $("#txtContrasenia").val();

            $.post("/Auth/Login", { correo: correo, contrasena: contrasena }, function (response) {
                if (response.success) {
                    window.location.href = response.redirectUrl;
                } else {
                    alert(response.message);
                  
                }
            });
        });
        
    });
</script>


