@model CollegeKids2._0.Models.Usuarios

@{
    ViewData["Title"] = "Crear Usuario";
    var roles = ViewBag.Roles as List<CollegeKids2._0.Models.Rol>;
}

<h2>Crear Usuario</h2>

<form asp-action="CrearUsuario" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Correo">Correo Electrónico</label>
        <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Contraseña">Contraseña</label>
        <input asp-for="Contraseña" class="form-control" type="password" placeholder="Contraseña" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RolId">Rol</label>
        <select asp-for="RolId" class="form-control">
            <option value="">Seleccionar un rol</option>
            @foreach (var rol in roles)
            {
                <option value="@rol.Id">@rol.Nombre</option>
            }
        </select>
        <span asp-validation-for="RolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
</form>
