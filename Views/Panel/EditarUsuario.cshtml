@model CollegeKids2._0.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
    var roles = ViewBag.Roles as List<CollegeKids2._0.Models.Rol>;
    var selectList = roles.Select(rol => new SelectListItem
            {
                Text = rol.Nombre,
                Value = rol.Id.ToString(),
                Selected = rol.Id == Model.RolId
            }).ToList();
}

<h2>Editar Usuario</h2>

<form asp-action="EditarUsuario" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre completo" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contraseña"></label>
        <input asp-for="Contraseña" class="form-control" type="password" placeholder="Nueva contraseña (opcional)" />
        <span asp-validation-for="Contraseña" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RolId"></label>
        <select asp-for="RolId" class="form-control" asp-items="@(new SelectList(selectList, "Value", "Text"))"></select>
        <span asp-validation-for="RolId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
</form>